<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="5dp"

    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingRight="5dp">
    <LinearLayout
        android:visibility="visible"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/ll_operate"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:background="@drawable/layout_operate_one_shape"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:paddingRight="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_notes"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:text="笔记"/>
        <ImageView
            android:id="@+id/iv_pink"
            android:scaleType="fitEnd"
            android:layout_below="@id/tv_notes"
            android:src="@drawable/ic_pink_short"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:text="收藏"/>
        <ImageView
            android:id="@+id/iv_yellow"
            android:scaleType="fitEnd"
            android:layout_below="@id/tv_collection"
            android:src="@drawable/ic_yellow_short"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:text="删除"/>
        <ImageView
            android:id="@+id/iv_green"
            android:scaleType="fitEnd"
            android:layout_below="@id/tv_delete"
            android:src="@drawable/ic_green_short"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/tv_translate"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:text="翻译"/>
        <ImageView
            android:id="@+id/iv_blue"
            android:scaleType="fitEnd"
            android:layout_below="@id/tv_translate"
            android:src="@drawable/ic_blue_short"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView

            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:text="复制"/>
        <ImageView
            android:id="@+id/iv_purple"
            android:layout_below="@id/tv_copy"
            android:src="@drawable/ic_purple_long"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:scaleType="fitEnd"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/ll_toast"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/layout_operate_one_shape"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:lines="2"
            android:text="同时删除对应笔记？"
            android:textColor="@color/bg_white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:id="@+id/btn_cancel"
                android:textSize="13sp"
                android:text="取消"
                android:background="@null"
                android:layout_width="wrap_content"
                android:textColor="@color/bg_white"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:text="确定"
                android:background="@null"
                android:id="@+id/btn_ok"
                android:textSize="13sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="@color/bg_white"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>