<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_window_background"
    tools:context="com.yunding.dut.ui.reading.ReadingChoiceQuestionFragment">

    <LinearLayout
        android:background="@color/color_window_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/hello_blank_fragment" />

                <!--<com.yunding.dut.view.DUTVerticalRecyclerView-->
                    <!--android:id="@+id/rv_input_list"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

    <include layout="@layout/layout_question_toast" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交答案"
        android:theme="@style/DUTButton" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一题"
        android:theme="@style/DUTButton" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_to_answer_pre"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_to_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView

        android:id="@+id/tv_title"
        android:textColor="@color/bg_white"
        android:text="sdadssd"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:padding="1dp"
        android:textSize="14sp"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_question_title"/>
</RelativeLayout>
