<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sfl_input"
    android:background="@color/bg_white"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:overScrollMode="never"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:id="@+id/scrollview"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.yunding.dut.view.DUTHorizontalRecyclerView

        android:id="@+id/horizontalListview_button"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </com.yunding.dut.view.DUTHorizontalRecyclerView>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pagesize"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="5/20"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="346dp"
        android:layout_gravity="center"
        android:layout_height="218dp"
        >

        <RelativeLayout
            android:background="@drawable/btn_white_coners"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_ppt"
                android:layout_width="295dp"
                android:layout_height="164dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="17dp"
                fresco:placeholderImage="@drawable/ic_zhanwei" />
        </RelativeLayout>
        <TextView

            android:id="@+id/tv_page"
            android:textColor="@color/bg_white"
            android:text="sdadssd"

            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:padding="1dp"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_question_title"/>

    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/rl_media"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.yunding.dut.view.HorizontalListView

            android:id="@+id/horizontalListview_media"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </com.yunding.dut.view.HorizontalListView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_record_progress"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#fefefe"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_play"
                android:layout_marginLeft="25.5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/iv_stop"
                android:visibility="gone"
                android:layout_marginLeft="25.5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/id_pause"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:textColor="@color/textColorShow"/>
            <SeekBar
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:progressDrawable="@drawable/seekbar_style"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_all_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"

                android:layout_marginRight="23dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:textColor="@color/text_color"/>
            <ImageView
                android:id="@+id/iv_delete"
                android:src="@drawable/ic_delete"
                android:layout_marginRight="25.5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp" />

        </LinearLayout>
    </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9dff9"></View>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_question_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="题目1."
                        android:textColor="@color/textColorShow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="this is it!"
                            android:textColor="@color/text_color" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="3dp"
                            android:background="#dfe5ff"></View>
                    </LinearLayout>
                </LinearLayout>

                <com.yunding.dut.view.DUTVerticalRecyclerView
                    android:id="@+id/list_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </com.yunding.dut.view.DUTVerticalRecyclerView>
                <include layout="@layout/layout_ppt_analysis"
                    ></include>
                <Button
                    android:layout_marginTop="40dp"
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_corners"

                    android:text="提交答案"
                    android:textColor="@color/bg_white"
                    android:textSize="16sp" />

            </LinearLayout>







    </LinearLayout>
    </ScrollView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="35dp">
            <Button
                android:layout_width="wrap_content"
                android:background="@null"
                android:id="@+id/btn_last"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorShow"
                android:text="上一题"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorShow"
                android:text="下一题"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/iv_sandglass"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/tv_time"
                    android:layout_width="12dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_sandyglass_gray"
                    android:layout_centerVertical="true"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_time"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>