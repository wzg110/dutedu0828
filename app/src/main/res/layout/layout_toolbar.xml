<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar_height"
        android:background="@color/color_primary"
        app:navigationIcon="@drawable/ic_title_bac1"
        app:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/text_style_title">
        <ImageView
            android:id="@+id/iv_ppt_list"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/ic_ppt_grid"/>

        <TextView

            android:id="@+id/tv_title"

            android:singleLine="true"
            android:ellipsize="end"
            style="@style/text_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_exit1"

            android:layout_width="50dp"

            android:textColor="@color/text_color"
            android:gravity="left|center_vertical"
            android:text="疑问"
            android:textSize="16sp"

            android:layout_height="match_parent"
            android:layout_gravity="right"/>
        <RelativeLayout
            android:layout_width="50dp"
            android:visibility="gone"
            android:id="@+id/tv_exit"
            android:layout_gravity="right"
            android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_text_bg_tips"
            android:textColor="@color/text_color"
          android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_me"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            fresco:roundAsCircle="true"
            android:background="@drawable/ic_userhead"
            android:layout_height="30dp" />
    </android.support.v7.widget.Toolbar>

</FrameLayout>