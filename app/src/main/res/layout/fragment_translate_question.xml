<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_window_background"
    android:orientation="vertical">


    <LinearLayout
        android:background="@color/color_window_background"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_window_background"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView

                android:background="@color/bg_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/ll_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_color"
                        android:text="@string/hello_blank_fragment" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginTop="80dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="答："
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/orange"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/et_answer"
                            android:singleLine="false"
                            android:hint="请输入答案"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"

                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"

                            android:theme="@style/MyEditText" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="120dp">
            <include layout="@layout/layout_translate_question_toast" />

            <ImageView
                android:id="@+id/iv_go_back_reading"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_back_reading"/>

            <ImageView
                android:id="@+id/iv_go_answer_where"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_back_reading"/>

        </RelativeLayout>
        <Button
          
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交答案"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/bg_white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_corners" />

        <Button
            
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一题"
            android:textSize="16sp"
            android:textColor="@color/bg_white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_corners" />
    </LinearLayout>
    <TextView

        android:id="@+id/tv_title"
        android:textColor="@color/bg_white"
        android:text="sdadssd"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:padding="1dp"
        android:textSize="12sp"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_question_title"/>


</RelativeLayout>