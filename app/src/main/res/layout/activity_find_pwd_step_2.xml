<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/bg_white"
    tools:context="com.yunding.dut.ui.account.FindPwdStep1Activity">


    <TextView
        android:textSize="14sp"
        android:layout_marginTop="31dp"
        android:textColor="#808080"
        android:text="请设置您的新密码"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_width="270dp"

        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="55dp"
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="14sp"
            android:id="@+id/et_new_pwd"
            android:layout_width="262dp"
            android:textColorHint="#cccccc"
            android:hint="@string/find_pwd_step_2_input_new_pwd"
            android:textColor="@color/title"
            android:inputType="phone"
            android:background="@null"
            android:layout_marginLeft="7dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@id/et_new_pwd"
            android:layout_width="262dp"
            android:layout_centerHorizontal="true"
            android:background="@color/textColorShow"
            android:layout_marginTop="7dp"
            android:layout_height="0.5dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_sms_code"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="14sp"
                android:id="@+id/et_confirm_pwd"
                android:layout_width="262dp"
                android:layout_marginLeft="7dp"
                android:textColorHint="#cccccc"
                android:hint="@string/find_pwd_step_2_confirm_new_pwd"
                android:inputType="phone"
                android:background="@null"
                android:textColor="@color/title"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_below="@id/ll_sms_code"
            android:layout_width="262dp"
            android:layout_centerHorizontal="true"
            android:background="@color/textColorShow"
            android:layout_marginTop="7dp"
            android:layout_height="0.5dp"></View>
    </RelativeLayout>



    <Button
        android:id="@+id/btn_ok"
        android:layout_width="262dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="确定"
        android:textColor="@color/bg_white"
        android:textSize="17sp"
        android:background="@drawable/btn_reg_bg" />



</LinearLayout>
