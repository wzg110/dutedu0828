<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"
        android:color="@color/bottom_navigation_normal"
        android:drawable="@color/bottom_navigation_normal"/>
    <!-- focused -->
    <item android:state_checked="true"
        android:color="@color/bottom_navigation_selected"
        android:drawable="@color/bottom_navigation_selected"/>
    <!-- checked -->


    <item android:state_checked="false"
        android:color="@color/bottom_navigation_normal"
        android:drawable="@color/bottom_navigation_normal"/>
    <!-- default 此为默认的，一定要有-->
</selector>