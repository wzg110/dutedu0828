<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!--标题文字样式-->
    <style name="text_style_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--通用黑色文字样式-->
    <style name="text_style_common_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!--通用灰色文字样式-->
    <style name="text_style_common_gray">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="text_style_14_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="text_style_14_gray">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <style name="text_style_12_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="text_style_12_gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9E9E9E</item>
    </style>

    <!-- 横线 -->
    <style name="hro_line">
        <item name="android:background">@color/bg_gray</item>
        <item name="android:layout_height">@dimen/line_height_in_page</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--文本框样式-->
    <style name="DUTEditText" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/et_text_color_hint</item>
        <item name="colorControlNormal">@color/et_color_control_normal</item>
        <item name="colorControlActivated">@color/et_color_control_activated</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
    </style>

    <!--按钮样式-->
    <style name="DUTButton" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="colorPrimary">@color/btn_color_button_normal</item>
        <item name="colorControlHighlight">@color/btn_color_control_high_light</item>
        <item name="colorButtonNormal">@color/btn_color_button_normal</item>
    </style>

    <!--消息按钮样式-->
    <style name="DUTMsgButton" parent="Theme.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="colorPrimary">@color/btn_color_button_normal</item>
        <item name="colorControlHighlight">@color/btn_color_control_high_light</item>
        <item name="colorButtonNormal">@color/btn_color_button_normal</item>
    </style>

    <!--首页底部导航-->
    <style name="DUTBottomNavigation">
        <item name="android:background">@color/bg_white</item>
        <item name="itemBackground">@drawable/bg_ripple</item>
        <item name="itemIconTint">@color/color_primary</item>
        <item name="itemTextColor">@color/color_primary</item>
    </style>

    <style name="OperateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--拍照库样式-->
    <style name="TakePhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

</resources>
