        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--拍照库样式-->
    <style name="TakePhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
